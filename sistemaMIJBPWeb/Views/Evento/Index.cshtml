@model IEnumerable<CapaDominio.Entities.Evento>

@{
    ViewData["Title"] = "Eventos";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Agregar Nuevo Evento</a>
</p>

@if(Model.Count() > 0)
{
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEvento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEvento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
    </table>
}
else
{
    <h2>No hay eventos registrados</h2>
}